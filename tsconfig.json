{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
